{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "types": [
      "react",
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@bamboo/designer": [
        "../designer/src/index.ts"
      ],
      "@bamboo/canvas": [
        "../canvas/src/index.ts"
      ],
      "@bamboo/renderer": [
        "../renderer/src/index.ts"
      ],
      "@bamboo/protocol": [
        "../protocol/src/index.ts"
      ],
    },
  },
  "include": [
    "src",
    "*.d.ts"
  ]
}
